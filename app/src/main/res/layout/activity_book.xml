<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_vertical"
        >
        <SearchView
            android:id="@+id/search_book"
            android:layout_weight=".9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp"
            android:iconifiedByDefault="false"
            android:queryHint="Nhập tên sách" />
        <ImageButton
            android:layout_weight=".1"
            android:id="@+id/btn_toggle_filter"
            android:src="@drawable/outline_filter_list_24"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="mở tắt filter" />
    </LinearLayout>




<!--    <com.google.android.material.textfield.TextInputLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
<!--        <Spinner-->
<!--            android:id="@+id/spn_category"-->
<!--            android:layout_marginHorizontal="16dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            />-->
<!--    </com.google.android.material.textfield.TextInputLayout>-->

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rc_filter_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        android:layout_marginVertical="10dp"
        android:animateLayoutChanges="false"
        />

    <Button
        android:id="@+id/btn_add_book"
        android:text="@string/add_book"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>